<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blessing.aisaka.dao.IPaperDao">

    <select id="queryPaperById" resultType="com.blessing.aisaka.entity.Paper">
        SELECT
          id,course_id,name,value,answer,time
        FROM
          paper
        WHERE
          id=#{id}
    </select>

    <select id="queryPaperByCourse" resultType="com.blessing.aisaka.entity.Paper"
            parameterType="com.blessing.aisaka.entity.Course">
        SELECT
          id,course_id,name,value,answer,time
        FROM
          paper
        WHERE
          course_id=#{id}
        LIMIT 1
    </select>
</mapper>
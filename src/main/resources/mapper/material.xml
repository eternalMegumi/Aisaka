<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blessing.aisaka.dao.IMaterialDao">
    <resultMap id="materialList" type="com.blessing.aisaka.entity.Material">
        <id column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="queryMaterialById" resultType="com.blessing.aisaka.entity.Material">
        SELECT
          id,course_id,name
        FROM
          material
        WHERE
          id=#{id}
    </select>

    <select id="queryMaterialByCourse" resultMap="materialList" parameterType="com.blessing.aisaka.entity.Course">
        SELECT
          id,course_id,name
        FROM
          material
        WHERE
          course_id=#{id}
    </select>
</mapper>